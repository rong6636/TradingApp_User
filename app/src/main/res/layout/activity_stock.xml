<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_w"
    tools:context=".StockActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/background_primer"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_futures_close"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="X"
            android:background="#1d2333"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_30"
            android:onClick="close"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_futures_trading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_38"
            android:text="下單"
            android:background="#1d2333"
            android:textColor="@color/background_w"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_futures_orderlsit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_38"
            android:text="委託"
            android:background="#1d2333"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="clickOrder"
            />

        <Button
            android:id="@+id/btn_futures_investments"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_38"
            android:text="明細"
            android:background="#1d2333"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="clickDetail"
            />

        <Button
            android:id="@+id/btn_futures_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_38"
            android:text="庫存"
            android:background="#1d2333"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="clickPortfolio"
            />

    </LinearLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#05080c"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_0_5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="#234">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="TWSE"
                    android:textSize="@dimen/sp_24"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/btn_stock_changeStockType"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:textSize="@dimen/sp_24"
                    android:text="市"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="changeStockType"
                    />
                <EditText
                    android:id="@+id/edt_stock_searchstock"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2330"
                    android:textSize="@dimen/dp_25"
                    android:textColor="#CCC"
                    android:background="#345"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    />

                <Button
                    android:id="@+id/btn_stock_searchstock"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:textSize="@dimen/sp_25"
                    android:text="O"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="searchStock"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_5"
                android:background="#888"
                >


                <TextView
                    android:id="@+id/txv_stock_titleType"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="市"
                    android:textSize="25sp"
                    android:textColor="#FFF"
                    android:background="#05080c"/>

                <TextView
                    android:id="@+id/txv_stock_titleName"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textSize="@dimen/sp_30"
                    android:textColor="#FFF"
                    android:background="#05080c"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txv_stock_titlePrice"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="0.00"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_34"
                        android:textColor="#FFF"
                        android:background="#05080c"/>

                    <TextView
                        android:id="@+id/txv_stock_titleChange"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="▼▲0.00 (-0.00%)"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#FFF"
                        android:background="#05080c"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#05080c"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_15"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_8"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="委買"
                            android:textSize="@dimen/sp_24"
                            android:textColor="#FFF"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txv_stock_total_bid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/sp_18"
                            android:textColor="#FFF"
                            android:gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_bidlot_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_bidprcie_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#01937C"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txv_stock_bidlot_2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/txv_stock_bidprcie_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#01937C"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_bidlot_3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_bidprcie_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#01937C"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_bidlot_4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_bidprcie_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#01937C"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_bidlot_5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_bidprcie_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#01937C"
                                android:gravity="center"
                                />
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_5"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_8"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="委賣"
                            android:textSize="@dimen/sp_24"
                            android:textColor="#FFF"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txv_stock_total_ask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/sp_18"
                            android:textColor="#FFF"
                            android:gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_askprcie_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="101.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#AA2B1D"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_asklot_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_askprcie_2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="101.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#AA2B1D"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_asklot_2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_askprcie_3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="101.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#AA2B1D"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_asklot_3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_askprcie_4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="101.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#AA2B1D"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_asklot_4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txv_stock_askprcie_5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="101.00"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#AA2B1D"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/txv_stock_asklot_5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/dp_5"
                                android:text="1000"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#FFF"
                                android:gravity="center"
                                />
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txv_stock_renewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="2021-07-26 08:00:00"
                android:textSize="@dimen/sp_12"
                android:textColor="#FFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#05080c"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="@dimen/dp_5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#3871"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5">
                    >

                    <TextView
                        android:id="@+id/txv_stock_orderPriceSub"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#FFF"
                        android:textSize="@dimen/sp_24"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:onClick="stock_priceSub"
                        />

                    <TextView
                        android:id="@+id/txv_stock_orderPriceChoose"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="#FFF"
                        android:textSize="@dimen/sp_24"
                        android:onClick="stock_priceChoose"

                        />
                    <TextView
                        android:id="@+id/txv_stock_orderPriceAdd"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="#FFF"
                        android:textSize="@dimen/sp_24"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:onClick="stock_priceAdd"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#3871"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="#3871"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/txv_stock_orderLotSub"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="#FFF"
                            android:textSize="@dimen/sp_24"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:onClick="stock_lotSub"
                            />

                        <TextView
                            android:id="@+id/txv_stock_orderLotChoose"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_30"
                            android:text="1"
                            android:textColor="#FFF"
                            android:textSize="@dimen/sp_24"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:onClick="stock_lotSChoose"
                            />

                        <TextView
                            android:id="@+id/txv_stock_orderLotAdd"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="#FFF"
                            android:textSize="@dimen/sp_24"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:onClick="stock_lotAdd"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txv_stcok_showBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="約 TWD0"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_20"
                android:layout_gravity="center"
                android:textAlignment="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                >
                <Button
                    android:id="@+id/Btn_stock_buy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:background="@drawable/background_grainer"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="買多"
                    android:textSize="@dimen/sp_40"
                    android:onClick="buyStock"
                    />

                <Button
                    android:id="@+id/Btn_stock_sell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:background="@drawable/background_loser"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="賣空"
                    android:textSize="@dimen/sp_40"
                    android:onClick="sellStock"
                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
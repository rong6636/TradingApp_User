<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1d2333"
        >
        <Button
            android:id="@+id/btn_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="X"
            android:background="#1d2333"
            android:layout_alignParentLeft="true"
            android:textColor="#FFF"
            android:textSize="35dp"
            android:onClick="close"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="註冊"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#eceff1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_quicksignup"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="快速註冊"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:background="#005cb2"
                android:layout_margin="20dp"
                android:onClick="quickSignup"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="將由系統隨機取名，且密碼為12346578"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.8dp"
            android:background="#000"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="設定您的帳號"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/edt_inputuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginVertical="8dp"
                    android:background="#FFF"
                    android:hint=" 須為六個以上的英文或數字"
                    android:textSize="22dp"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="設定您的密碼"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/edt_inputpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginVertical="8dp"
                    android:background="#FFF"
                    android:hint=" 須為八個以上的英文或數字"
                    android:textSize="22dp"
                    android:singleLine="true"
                    android:layout_margin="5dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="確認您的密碼"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/edt_inputcheckpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginVertical="8dp"
                    android:background="#FFF"
                    android:hint=" 須為八個以上的英文或數字"
                    android:textColor="#999"
                    android:textSize="22dp"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/txv_signuplog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="qwe"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:gravity="right"
                    android:textColor="#F00"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btn_signuptoserver"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="註冊"
                    android:textSize="25dp"
                    android:textColor="#FFF"
                    android:background="#005cb2"
                    android:onClick="signuptoServer"
                    />
            </RelativeLayout>





        </LinearLayout>

    </LinearLayout>



</LinearLayout>
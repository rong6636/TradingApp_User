<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_5"
    android:background="@color/bg_primary"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="top"
        >
        <TextView
            android:id="@+id/txv_hotStocksItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字四個"
            android:textSize="@dimen/sp_23"
            android:textColor="#FFF"
            android:layout_gravity="start"
            />
        <TextView
            android:id="@+id/txv_hotStocksItem_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2330"
            android:textSize="@dimen/sp_14"
            android:textColor="#FFF"
            android:layout_gravity="start"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="0.5dp"
        android:gravity="top"
        >
        <TextView
            android:id="@+id/txv_hotStocksItem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,234"
            android:textSize="@dimen/sp_23"
            android:textColor="#FFF"
            android:layout_gravity="start"
            />
        <TextView
            android:id="@+id/txv_hotStocksItem_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="總量 5,000K"
            android:textSize="@dimen/sp_14"
            android:textColor="#FFF"
            android:layout_gravity="start"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="0.5dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txv_hotStocksItem_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▲100.00(-10.00%)"
            android:textSize="@dimen/sp_17"
            android:textColor="#FFF"
            android:layout_gravity="right"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txv_hotStocksItem_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:text="H：2,000"
                android:textSize="@dimen/sp_13"
                android:textColor="#FFF"
                android:layout_gravity="start"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/txv_hotStocksItem_yc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y：2,000"
                android:textSize="@dimen/sp_13"
                android:textColor="#FFF"
                android:layout_gravity="start"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txv_hotStocksItem_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/sp_13"
                android:text="L ：2,000"
                android:textSize="@dimen/sp_14"
                android:textColor="#FFF"
                android:layout_gravity="start"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>
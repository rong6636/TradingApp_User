<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/llo_talkItem_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_15"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txv_talkItem_msg_l"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="545454656465465165154654654564654"
            android:paddingRight="@dimen/dp_20"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/text_primary_white"
            />
        <TextView
            android:id="@+id/txv_talkItem_time_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:11"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_primary_dark"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llo_talkItem_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="right"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/txv_talkItem_time_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:11"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_primary_dark"
            android:layout_gravity="bottom"
            />
        <TextView
            android:id="@+id/txv_talkItem_msg_r"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="123"
            android:paddingLeft="@dimen/dp_20"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/text_primary_white"
            android:layout_gravity="end"
            />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@color/bg_primary_variant_dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登入"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >
            <EditText
                android:id="@+id/edt_singin_inputuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:layout_marginVertical="8dp"
                android:hint="帳號"
                android:textColor="#999"
                android:textSize="20dp"
                android:singleLine="true"
                android:background="#FFF"
                />

            <EditText
                android:id="@+id/edt_singin_inputpw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:padding="5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="8dp"
                android:layout_marginVertical="8dp"
                android:hint="密碼"
                android:textColor="#999"
                android:textSize="20dp"
                android:singleLine="true"
                android:background="#FFF"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="註冊"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:onClick="signup"
                android:background="@color/bg_primary_variant_dark"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="忘記密碼"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:onClick="forgetPassword"
                android:background="@color/bg_primary_variant_dark"
                />
            <Button
                android:id="@+id/btn_remember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="記住密碼"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:onClick="rememberPassword"
                android:background="@color/bg_primary_variant_dark"
            />

        </LinearLayout>
        <Button
            android:id="@+id/btn_MianLogin"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="登入"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:onClick="login"
            android:textColor="#FFF"
            android:background="@drawable/button_drawable"
            />
        <TextView
            android:id="@+id/txv_loginlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="v.1.0.0"
            android:textColor="@color/bg_secondary_variant_bright"
            android:textSize="18dp"
            android:gravity="end"
            />

    </LinearLayout>



</LinearLayout>